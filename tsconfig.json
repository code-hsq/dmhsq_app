{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["ES2018", "DOM"],
    "paths": {
      "@dmhsq_app/utils": ["./packages/utils/src"],
      "@dmhsq_app/vue": ["./packages/vue/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
